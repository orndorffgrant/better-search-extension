{
  "manifest_version": 2,
  "name": "BetterSearch",
  "version": "0.1",
  "description": "Personalized search. Better than google.",
  "permissions": [
    "webRequest",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://google.com/*",
        "*://mail.google.com/*",
        "*://calendar.google.com/*",
        "*://duckduckgo.com/*"
      ],
      "js": ["indexer.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
